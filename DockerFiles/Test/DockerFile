# 
RUN SetX /M PATH "\"C:\Program Files\Microsoft SQL Server\140\Tools\Binn;$env:PATH\"" ; \
    SetX /M PATH "\"C:\Program Files\Microsoft SQL Server\140\DAC\bin;$env:PATH\""


# Verify Login: (Optional)
