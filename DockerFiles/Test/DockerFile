RUN Start-Process -Wait -FilePath '\otp_win64_22.3.exe' -ArgumentList '/S'
RUN SetX /M PATH "\"C:\Program Files\erl10.7\bin;$env:PATH\""    ; \
    SetX /M ERLANG_HOME "\"C:\Program Files\erl10.7\""           ; \
    Remove-Item -Force /otp_win64_22.3.exe


# RabbitMQ
#
ADD https://github.com/rabbitmq/rabbitmq-server/releases/download/v3.8.3/rabbitmq-server-windows-3.8.3.zip /rabbitmq-server-3.8.3.zip
RUN Expand-Archive -Path /rabbitmq-server-3.8.3.zip -DestinationPath / ; \
    Move-Item /rabbitmq_server-3.8.3 /RabbitMQ                         ; \
    Remove-Item -Force /rabbitmq-server-3.8.3.zip
RUN Set-Location /RabbitMQ/sbin                                        ; \
    $env:RABBITMQ_NODE_IP_ADDRESS = \"127.0.0.1\"                      ; \
    $env:RABBITMQ_NODENAME = \"rabbitmq@localhost\"                    ; \
    $env:COMPUTERNAME = \"localhost\"                                  ; \
    ./rabbitmq-service.bat install


# .Net Core SDK
#
ADD https://download.visualstudio.microsoft.com/download/pr/adeab8b1-1c44-41b2-b12a-156442f307e9/65ebf805366410c63edeb06e53959383/dotnet-sdk-3.1.201-win-x64.zip /DotNet.zip
RUN Expand-Archive -Path /DotNet.zip -DestinationPath /DotNet ; \
    Remove-Item -Force /DotNet.zip                            ; \
    Move-Item /DotNet "\"/Program Files\""                    ; \
    SetX /M PATH "\"C:\Program Files\DotNet;$env:PATH\""      ; \
    & 'C:\Program Files\DotNet\dotnet.exe' test /version